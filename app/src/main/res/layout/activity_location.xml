<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaedf2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.freestand.ranu.fsmark2.Activities.Location">
    
    <ImageView
        android:id="@+id/free_stand_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_free_stand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_partner"
        android:layout_below="@id/free_stand_logo"
        android:layout_width="240dp"
        android:layout_height="170dp"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/partner"/>
            <TextView
                android:lineSpacingExtra="2sp"
                android:textColor="@color/dark"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am at a Freestand partner store right now."/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/text_or"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:layout_below="@+id/card_partner"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_elsewhere"
        android:layout_below="@id/text_or"
        android:layout_width="240dp"
        android:layout_height="170dp"
        app:cardCornerRadius="4dp"
        android:layout_centerHorizontal="true"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/elsewhere"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="I found Freestand elsewhere."
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/dark"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
